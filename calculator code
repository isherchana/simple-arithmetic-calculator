num1 = float(input("Enter the first number: "))
operations = input("Enter an operation (+ - * /): ")
num2 = float(input("Enter the second number: "))

if operations == "+":
    print(num1 + num2)

elif operations == "-":
    print(num1-num2)

elif operations == "*":
    print(num1*num2)

elif operations == "/":
    print(num1/num2)

else:
    print("not valid")
